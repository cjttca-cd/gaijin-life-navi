---
import '../styles/global.css';
import { locales, getLocalePath, type Locale } from '../i18n/index';

interface Props {
  title: string;
  description: string;
  ogImageAlt: string;
  locale: Locale;
}

const { title, description, ogImageAlt, locale } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.png', Astro.site);

const langMap: Record<Locale, string> = {
  en: 'en',
  zh: 'zh-Hans',
  vi: 'vi',
  ko: 'ko',
  pt: 'pt-BR',
};
---

<!doctype html>
<html lang={langMap[locale]} dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL.href} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL.href} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={langMap[locale]} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL.href} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    <!-- Hreflang Tags -->
    {locales.map((loc) => (
      <link
        rel="alternate"
        hreflang={langMap[loc]}
        href={new URL(getLocalePath(loc), Astro.site).href}
      />
    ))}
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL('/', Astro.site).href}
    />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Analytics Placeholder -->
    <!-- Google Analytics -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script> -->

    <!-- Cloudflare Web Analytics -->
    <!-- <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "YOUR_TOKEN"}'></script> -->
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <slot />
  </body>
</html>
