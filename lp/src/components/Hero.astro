---
import type { Translations } from '../i18n/index';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<section class="relative pt-24 pb-16 sm:pt-32 sm:pb-24 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-gradient-to-bl from-primary-100/60 via-accent-400/10 to-transparent rounded-full blur-3xl translate-x-1/3 -translate-y-1/4"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-gradient-to-tr from-primary-50/80 to-transparent rounded-full blur-3xl -translate-x-1/4 translate-y-1/4"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-1.5 bg-primary-50 border border-primary-200 rounded-full text-sm font-medium text-primary-700 mb-6">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        {t.hero.tagline}
      </div>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-tight text-gray-900 leading-[1.1] whitespace-pre-line mb-6">
        {t.hero.headline}
      </h1>

      <!-- Subtitle -->
      <p class="text-lg sm:text-xl text-gray-600 leading-relaxed max-w-2xl mx-auto mb-10">
        {t.hero.subtitle}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="#"
          class="inline-flex items-center gap-3 px-6 py-3.5 bg-gray-900 text-white rounded-xl hover:bg-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5 group"
          aria-label={t.hero.ctaAppStore}
        >
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
          </svg>
          <div class="text-left">
            <div class="text-[10px] leading-none opacity-80">Download on the</div>
            <div class="text-lg font-semibold leading-tight">{t.cta.appStore}</div>
          </div>
        </a>

        <a
          href="#"
          class="inline-flex items-center gap-3 px-6 py-3.5 bg-gray-900 text-white rounded-xl hover:bg-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5 group"
          aria-label={t.hero.ctaPlayStore}
        >
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3 20.5v-17c0-.59.34-1.11.84-1.35L13.69 12l-9.85 9.85c-.5-.24-.84-.76-.84-1.35m13.81-5.38L6.05 21.34l8.49-8.49 2.27 2.27m3.35-1.84c.39.22.64.64.64 1.08s-.25.86-.64 1.08l-2.13 1.23-2.5-2.5 2.5-2.5 2.13 1.23M6.05 2.66l10.76 6.22-2.27 2.27-8.49-8.49z" />
          </svg>
          <div class="text-left">
            <div class="text-[10px] leading-none opacity-80">Get it on</div>
            <div class="text-lg font-semibold leading-tight">{t.cta.playStore}</div>
          </div>
        </a>
      </div>

      <!-- Social Proof (optional placeholder) -->
      <div class="mt-12 flex items-center justify-center gap-8 text-sm text-gray-400">
        <div class="flex items-center gap-1.5">
          <div class="flex -space-x-1.5">
            <div class="w-6 h-6 rounded-full bg-gradient-to-br from-primary-300 to-primary-500 border-2 border-white"></div>
            <div class="w-6 h-6 rounded-full bg-gradient-to-br from-accent-400 to-accent-600 border-2 border-white"></div>
            <div class="w-6 h-6 rounded-full bg-gradient-to-br from-amber-300 to-amber-500 border-2 border-white"></div>
          </div>
          <span>1,000+ users</span>
        </div>
        <div class="flex items-center gap-1">
          {[...Array(5)].map(() => (
            <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
          <span>4.8/5</span>
        </div>
      </div>
    </div>
  </div>
</section>
